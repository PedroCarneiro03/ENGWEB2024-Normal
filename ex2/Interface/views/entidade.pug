extends layout

block content
  .w3-card-4
        header.w3-container.w3-red
            h1= title
        .w3-container

            if lista.length === 0
                p Nenhum item dispon√≠vel
            else
                p 
                    strong NIPC: 
                    | #{lista[0].NIPC_entidade_comunicante}
                p 
                    strong Entidade Comunicante: 
                    | #{lista[0].entidade_comunicante}
                table.w3-table-all
                    tr
                        th idcontrato
                        th objectoContrato
                        th dataCelebracaoContrato
                        th precoContratual
                        th NIPC_entidade_comunicante
                        th entidade_comunicante
                    each item in lista
                        tr
                            td
                                a(href="/"+item._id) #{item._id}
                            td=item.objectoContrato
                            td=item.dataCelebracaoContrato
                            td=item.precoContratual
                            td
                                a(href="/entidades/"+item.NIPC_entidade_comunicante) #{item.NIPC_entidade_comunicante}
                            td=item.entidade_comunicante
                p
                    strong Somatorio dos valores: 
                    | #{valor}

        footer.w3-container.w3-red
            address Gerado por Pedro Carneiro
            a(href="/") Voltar 

